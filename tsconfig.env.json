{
  "compilerOptions": {
    "noUnusedLocals": true,
    "composite": true,
    "noImplicitAny": false,
    "removeComments": true,
    "module": "ESNext",
    "moduleResolution": "Node10",
    "disableSizeLimit": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "ESNext",
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "ESNext", "DOM",
    ],
    "types": [
      "node",
      "three",
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": [
    "typings/*.d.ts",
    "internal/**/*.ts",
    "packages/**/*.vue",
    "packages/**/*.ts"
  ],
  "exclude": [
    "dist"
  ]
 }
 